        <header class="py-12" style="background-color: #faf4f4">
            <div class="max-w-screen-xl mx-auto px-6 text-center py-12">
                <h1
                    class="text-gray-800 text-4xl font-extrabold sm:text-5xl lg:text-6xl"
                >
                    Storie della Community
                </h1>
                <p class="mt-4 font-semibold text-lg sm:text-xl">
                    Esplora, vota e pubblica le tue storie. Unisciti alla nostra
                    community creativa!
                </p>
            </div>
            <div class="max-w-screen-lg mx-auto px-6">
                <div
                    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8"
                >
                    <div class="flex justify-center items-center gap-2">
                        <h3 class="text-md font-bold text-orange-400">
                            Autori:
                        </h3>
                        <p class="text-lg text-gray-800 font-bold" id="autori">
                            0
                        </p>
                    </div>

                    <div class="flex justify-center items-center gap-2">
                        <h3 class="text-md font-bold text-orange-400">
                            Storie Pubblicate:
                        </h3>
                        <p class="text-lg text-gray-800 font-bold" id="storie">
                            0
                        </p>
                    </div>

                    <div class="flex justify-center items-center gap-2">
                        <h3 class="text-md font-bold text-orange-400">
                            Voti Totali:
                        </h3>
                        <p class="text-lg text-gray-800 font-bold" id="voti">
                            0
                        </p>
                    </div>

                    <div class="flex justify-center items-center gap-2">
                        <h3 class="text-md font-bold text-orange-400">
                            Partite Concluse:
                        </h3>
                        <p class="text-lg text-gray-800 font-bold" id="partite">
                            0
                        </p>
                    </div>
                </div>
            </div>
        </header>
        <div class="filters-section"></div>
        <div
            class="flex flex-col gap-6 z-10 w-full justify-start pb-24 items-center mt-24"
        >
            <div class="w-full max-w-6xl rounded-lg px-6 py-10">
                <div class="w-full max-w-6xl px-6 py-4 flex flex-col gap-24">
                    <div
                        id="games-content"
                        class="flex w-full min-h-[450px] flex-col gap-6"
                    >
                        <% if (stories && stories.length > 0) { %> <%
                        stories.forEach(story => { %>
                        <a
                            href="/storia/<%= story.id %>-<%= story.slug %>"
                            style="text-decoration: none; color: inherit"
                        >
                            <div
                                style="
                                    display: flex;
                                    gap: 1rem;
                                    align-items: flex-start;
                                    margin-bottom: 1.5rem;
                                    cursor: pointer;
                                "
                            >
                                <img
                                    src="<%= story.cover_image_url || '/images/book_cover_placeholder.jpeg' %>"
                                    alt="Copertina di <%= story.title %>"
                                    style="
                                        width: 120px;
                                        height: 160px;
                                        object-fit: cover;
                                    "
                                />
                                <div>
                                    <h3><%= story.title %></h3>
                                    <h4><%= story.game_type %></h4>
                                    <p><%= story.back_cover %></p>
                                </div>
                            </div>
                        </a>
                        <% }); %> <% } else { %>
                        <p>Nessuna storia pubblicata al momento.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
        <section class="md:py-12 py-6 px-4 relative">
            <footer class="text-gray-800 py-6">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                        <!-- Link ai Termini e Privacy -->
                        <div
                            class="flex flex-col justify-center md:items-center items-start"
                        >
                            <div class="flex-col justify-center items-start">
                                <h3 class="font-semibold text-lg mb-4">
                                    Informazioni Legali
                                </h3>
                                <ul class="text-sm">
                                    <li class="mb-2">
                                        <a
                                            href="/termini-e-condizioni"
                                            class="hover:text-blue-500 font-semibold py-4"
                                            target="_blank"
                                            >Termini e Condizioni</a
                                        >
                                    </li>
                                    <li class="mb-2">
                                        <a
                                            href="/privacy-policy"
                                            class="hover:text-blue-500 font-semibold py-4"
                                            target="_blank"
                                            >Privacy Policy</a
                                        >
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <!-- Supporto -->
                        <div class="flex flex-col justify-center items-center">
                            <div class="flex-col justify-center items-start">
                                <h3 class="font-semibold text-lg mb-2">
                                    Supporto
                                </h3>
                                <p class="text-sm">
                                    Per qualsiasi domanda o problema, contattaci
                                    via email:
                                </p>
                                <a
                                    href="mailto:support@wordrops.com"
                                    class="text-blue-500 hover:text-blue-700"
                                    >support@wordrops.com</a
                                >
                            </div>
                        </div>

                        <!-- Copyright -->
                        <div
                            class="col-span-1 sm:col-span-2 lg:col-span-4 text-center mt-4 sm:mt-0"
                        >
                            <p class="text-sm">
                                © 2025 wordrops. Tutti i diritti riservati.
                            </p>
                        </div>
                    </div>
                </div>
            </footer>
        </section>
        <script src="/js/menu.js" defer></script>
    </body>
</html>
