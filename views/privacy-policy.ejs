<!DOCTYPE html>
<html lang="<%= lang %>">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <script>
            if (location.hostname === "wordrops.com") {
                var script = document.createElement("script");
                script.src =
                    "https://cmp.osano.com/QlJmn7IrlA/70225bcf-c11e-4f67-acf4-0cf029ad9f3b/osano.js";
                document.head.appendChild(script);
            }
        </script>
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/images/favicon/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/images/favicon/favicon-16x16.png"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Oswald:wght@200..700&display=swap"
            rel="stylesheet"
        />
        <link href="/style/output.css" rel="stylesheet" />
        <link href="/style/style.css" rel="stylesheet" />
        <title><%= texts.title %></title>
    </head>
    <body class="bg-gray-50 text-gray-800">
        <div class="mx-auto">
            <!-- Header -->
            <header
                class="text-center py-12 px-4 sm:px-6 lg:px-8"
                style="background-color: #faf4f4"
            >
                <h1 class="text-3xl font-bold text-gray-800">
                    <%= texts.headerTitle %>
                </h1>
            </header>

            <div
                class="flex flex-col justify-center items-center px-4 sm:px-6 lg:px-8"
            >
                <!-- Content -->
                <div class="py-8 max-w-4xl">
                    <!-- Introduzione -->
                    <section class="py-8">
                        <p class="text-lg text-gray-700 mb-12">
                            <%- texts.intro %>
                        </p>

                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.dataCollectedTitle %>
                        </h3>

                        <ul class="list-disc text-lg list-inside text-gray-700">
                            <% texts.dataCollectedItems.forEach(function(item) {
                            %>
                            <li><%- item %></li>
                            <% }) %>
                        </ul>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.howWeUseDataTitle %>
                        </h3>
                        <ul class="list-disc list-inside text-lg text-gray-700">
                            <% texts.howWeUseDataItems.forEach(function(item) {
                            %>
                            <li><%- item %></li>
                            <% }) %>
                        </ul>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.dataRetentionTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%= texts.dataRetentionTitle %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h2 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.externalProvidersTitle %>
                        </h2>
                        <p class="text-lg text-gray-700">
                            <%= texts.externalProvidersText %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.externalProvidersTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%= texts.dataProtectionText %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.userRightsTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%- texts.userRightsText %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.consentTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%= texts.consentText %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.privacyChangesTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%= texts.privacyChangesText %>
                        </p>
                    </section>

                    <section class="py-8">
                        <h3 class="text-2xl font-semibold text-gray-800 mb-2">
                            <%= texts.contactTitle %>
                        </h3>
                        <p class="text-lg text-gray-700">
                            <%- texts.contactText %>
                        </p>
                    </section>
                </div>
            </div>
        </div>
    </body>
</html>
